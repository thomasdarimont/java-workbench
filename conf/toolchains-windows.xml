<?xml version="1.0" encoding="UTF8"?>
<toolchains>

    <!-- JDK toolchains -->
    <toolchain>
        <type>jdk</type>
        <provides>
            <version>1.8</version>
            <vendor>OpenJDK</vendor>
            <os>Windows 10</os>
        </provides>
        <configuration>
            <jdkHome>/Program Files/OpenJDK/jdk-8</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <version>11</version>
            <vendor>OpenJDK</vendor>
            <os>Windows 10</os>
        </provides>
        <configuration>
            <jdkHome>/Program Files/OpenJDK/jdk-11</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <version>15</version>
            <vendor>OpenJDK</vendor>
            <os>Windows 10</os>
        </provides>
        <configuration>
            <jdkHome>/Program Files/OpenJDK/jdk-15</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <version>16-loom</version>
            <vendor>OpenJDK</vendor>
            <os>Windows 10</os>
        </provides>
        <configuration>
            <jdkHome>/Program Files/OpenJDK/jdk-16-loom</jdkHome>
        </configuration>
    </toolchain>

    <toolchain>
        <type>jdk</type>
        <provides>
            <version>20-CE</version>
            <vendor>GraalVM</vendor>
            <os>Windows 10</os>
        </provides>
        <configuration>
            <!--
            Install native-image support via
            C:\Program Files\OpenJDK\graalvm-ce-java11-20.2.0>bin\gu.cmd install native-image
            -->
            <jdkHome>/Program Files/OpenJDK/graalvm-ce-java11-20.2.0</jdkHome>
        </configuration>
    </toolchain>
</toolchains>